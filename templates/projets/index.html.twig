                    </a>
                    <a href="{{path('app_projet_reseauSocial') }}">  <span>Plus de détail</span></a>
                    <br>





                </div>
            </div>
        </div>
    </div>

    <script>
        function showImage(fileName) {
            const img = document.getElementById('previewImage');
            img.src = '/' + fileName;
            img.classList.remove('d-none');
        }

        function hideImage() {
            const img = document.getElementById('previewImage');
            img.classList.add('d-none');
            img.src = '';
        }
    </script>
{% endblock %}

